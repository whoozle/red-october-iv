: battle_object_draw_highlight
	i := battle_menu_pick_target_target
	load v0 - v0
	battle_object_get_x_by_v0
	i := long tile_highlight_16_data
	sprite v0 v1 0
	return

: battle_menu_pick_target_target
	0

: battle_menu_pick_target
	va := 0
	i := battle_menu_pick_target_target
	save va - va
	battle_object_draw_highlight

	loop
		sound_tick
		va := OCTO_KEY_A
		vb := -1
		vc := 3
		battle_menu_pick_target_handle_key
		va := OCTO_KEY_D
		vb := 1
		vc := 0
		battle_menu_pick_target_handle_key
		v0 := 4
		if v0 -key then
	again
	va := sfx_index_menu
	sfx_play
	battle_object_draw_highlight
	return

: battle_menu_pick_target_handle_key
	menu_check_key
	if v0 != 0 begin
		battle_object_draw_highlight
		i := battle_object_count
		load v1 - v1

		i := battle_menu_pick_target_target
		load v0 - v0
		v0 += vb
		if v0 >= v1 then
			v0 := vc
		save v0 - v0
		battle_object_draw_highlight
	end
	return
