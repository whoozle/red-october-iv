: battle_object_get_tile
	i := battle_object_type
	i += vd
	load v0 - v0
	v0 += v0

	i := long battle_object_tiles
	i += v0
	load v0 - v1

	i := battle_object_get_tile_addr
	save v0 - v1

	i := battle_object_animation
	i += vd
	load v0 - v0

	0xf0 0x00
: battle_object_get_tile_addr
	0 0
