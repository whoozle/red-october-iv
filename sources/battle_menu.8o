: battle_object_get_x_by_v0
	v0 <<= v0
	v0 <<= v0
	v0 <<= v0
	v1 := v0
	v0 <<= v0
	v0 += v1
	v1 := 10
	v0 += 16
	return

: battle_object_draw
	battle_object_get_tile

	v0 := vd
	battle_object_get_x_by_v0
	sprite v0 v1 0
	return

: battle_object_swap_tiles
	i := battle_object_animation
	i += vd
	load v0 - v0
	v1 := 64
	v0 =- v1
	save v0 - v0
	return

: battle_object_tick
	i := battle_tick_delay
	i += vd
	load v0 - v0
	if v0 != 0 begin
		v0 += -1
		save v0 - v0
		return
	end
	v0 := random battle_tick_freq_random
	v0 += battle_tick_freq_base
	save v0 - v0

	battle_object_draw
	battle_object_swap_tiles
	battle_object_draw
	return

: battle_draw_init
	vd := 0
	loop
		battle_object_draw
		vd += 1
		i := battle_object_count
		load v0 - v0
		if vd != v0 then
	again
	return

: battle_tick
	i := battle_tick_last_t
	load v0 - v0
	v1 := delay
	if v1 == 0 begin
		v1 := 6
		delay := v1
	end
	if v1 == v0 then
		return
	save v1 - v1

	vd := 0
	loop
		battle_object_tick
		vd += 1
		if vd != 4 then
	again
	return

